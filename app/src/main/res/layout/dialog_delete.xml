<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:id="@+id/TemaFona"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2E2828"
        android:orientation="vertical">

    <View
        android:layout_width="130dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#A8A8A8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Are you sure want to delete \n This Note?"
        android:textColor="#C5B4B4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/yes_btn"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"

        android:text="Yes"
        android:textColor="@color/bac_color"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/dialog_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:background="@drawable/no_btn"
        android:gravity="center"
        android:padding="10dp"
        android:text="No"
        android:textColor="@color/bac_color"
        android:textSize="15sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>