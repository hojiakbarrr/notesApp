<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bac_color"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.CreateNotesFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edittitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_txt_shape"
            android:hint="title"
            android:padding="15dp"
            android:textColorHint="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="34dp"
                android:layout_marginStart="10dp"
                android:id="@+id/pRed"
                android:background="@drawable/red_dot"
                android:layout_height="34dp"/>

            <ImageView
                android:id="@+id/pBlue"
                android:layout_width="34dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/blue_dot"
                android:layout_height="34dp"/>

            <ImageView
                android:id="@+id/pYellow"
                android:layout_width="34dp"
                android:background="@drawable/yellow_dot"
                android:layout_marginStart="50dp"
                android:layout_height="34dp"/>

            <ImageView
                android:id="@+id/pGreen"
                android:layout_width="34dp"
                android:background="@drawable/green_dot"
                android:layout_marginStart="50dp"
                android:layout_height="34dp"/>

            <ImageView
                android:id="@+id/pViolet"
                android:layout_width="34dp"
                android:background="@drawable/violet_dot"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="10dp"
                android:layout_height="34dp"/>


        </LinearLayout>


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_txt_shape"
            android:gravity="start"
            android:hint="text"
            android:padding="15dp"
            android:textColorHint="@color/white" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:background="@drawable/edit_txt_shape"
            android:hint="time"
            android:padding="15dp"
            android:textColorHint="#C8BDBD"
             />

        <Button
            android:id="@+id/btnCreatFab"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:backgroundTint="#B68530"
            android:text="Save note" />

    </LinearLayout>

